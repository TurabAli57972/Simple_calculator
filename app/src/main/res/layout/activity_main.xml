<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#BBBCBA">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#434745"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:title="My Calculator"
        app:titleTextColor="#FFFFFF" />


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="30dp"
        android:background="@color/white"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="66sp"
        android:textColor="@color/black"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnC"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:textSize="40sp"
                android:background="@drawable/operator"
                android:onClick="clearEvent"
                android:text="C">

            </Button>

            <Button
                android:id="@+id/btnDel"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:background="@drawable/operator"
                android:onClick="deleteEvent"
                android:text="Del"
                android:textSize="40sp">

            </Button>

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:background="@drawable/operator"
                android:onClick="operatorEvent"
                android:text="/"
                android:textSize="40sp">

            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:textSize="40sp"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:onClick="numEvent"
                android:text="7">
            </Button>

            <Button
                android:id="@+id/btn8"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:textSize="40sp"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:onClick="numEvent"
                android:text="8">
            </Button>

            <Button
                android:id="@+id/btn9"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:textSize="40sp"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:onClick="numEvent"
                android:text="9">
            </Button>

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:textSize="40sp"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:background="@drawable/operator"
                android:onClick="operatorEvent"
                android:text="X">

            </Button>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:textSize="40sp"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:onClick="numEvent"
                android:text="4">

            </Button>

            <Button
                android:id="@+id/btn5"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:textSize="40sp"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:onClick="numEvent"
                android:text="5">

            </Button>

            <Button
                android:id="@+id/btn6"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:textSize="40sp"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:onClick="numEvent"
                android:text="6">

            </Button>

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:textSize="40sp"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:background="@drawable/operator"
                android:onClick="operatorEvent"
                android:text="+">

            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:textSize="40sp"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:onClick="numEvent"
                android:text="1">

            </Button>

            <Button
                android:id="@+id/btn2"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:textSize="40sp"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:onClick="numEvent"
                android:text="2">

            </Button>

            <Button
                android:id="@+id/btn3"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:textSize="40sp"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:onClick="numEvent"
                android:text="3">

            </Button>

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:textSize="40sp"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:background="@drawable/operator"
                android:onClick="operatorEvent"
                android:text="-">

            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn0"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:textSize="40sp"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:onClick="numEvent"
                android:text="0">

            </Button>

            <Button
                android:id="@+id/btnDot"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:textSize="40sp"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:onClick="numEvent"
                android:text=".">

            </Button>

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:textSize="40sp"
                android:layout_margin="2pt"
                android:layout_weight="1"
                android:background="@drawable/operator"
                android:onClick="equalEvent"
                android:text="=">

            </Button>
        </TableRow>
    </TableLayout>
</LinearLayout>


